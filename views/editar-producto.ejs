        modalOverlay.addEventListener('click', function () {
            toggleModal();
        });
    }

    // Cerrar con ESC
    document.addEventListener('keydown', function (e) {
        if (e.key === 'Escape' && profileModal.classList.contains('active')) {
            toggleModal();
        }
    });

    // Logout
