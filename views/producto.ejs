                        <button type="submit" class="search-btn">
                            <i class="fas fa-search"></i>
                        </button>
                    </form>
                    <div class="nav-icons">
                        <a href="/carrito-compra" class="nav-icon"><i class="fas fa-shopping-cart"></i></a>
                        <span class="nav-icon" id="userProfileToggle"><i class="fas fa-user"></i></span>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- User Profile Modal -->
    <div class="modal-overlay" id="modalOverlay"></div>
    <div class="profile-modal" id="profileModal">
        <div class="profile-modal-header">Perfil</div>
        <div class="profile-modal-body">
            <div class="profile-picture">
                <img src="/api/placeholder/200/200" alt="Profile Picture" id="userProfilePic">
            </div>
            <h4 class="user-name">Nombre de usuario</h4>
            <p class="user-email">Correo del usuario</p>
            <ul class="profile-menu">
                <li class="profile-menu-item"><a href="/perfil" class="profile-menu-link"><span class="profile-menu-icon"><i class="fas fa-user"></i></span>Perfil</a></li>
                <li class="profile-menu-item"><a href="/productos" class="profile-menu-link"><span class="profile-menu-icon"><i class="fas fa-exchange-alt"></i></span>Cambiar a proveedor</a></li>
                <li class="profile-menu-item"><a href="/historial-compras" class="profile-menu-link"><span class="profile-menu-icon"><i class="fas fa-history"></i></span>Historial de compras</a></li>
            </ul>
            <button class="logout-btn" id="logoutBtn">Cerrar sesión</button>
        </div>
    </div>

    <div class="breadcrumb-container">
        <div class="container">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Inicio</a></li>
                    <li class="breadcrumb-item"><a href="/cecyt-<%= producto.plantel_id %>"><%= producto.plantel_nombre %></a></li>
                    <li class="breadcrumb-item active"><%= producto.categoria_nombre %></li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="main-content">
        <div class="container-fluid product-detail-container">
            <div class="product-gallery">
                <div class="product-main-img">
                    <img src="<%= producto.nombre_imagen ? '/showImage/' + producto.nombre_imagen : '/api/placeholder/600/400' %>" alt="<%= producto.nombre %>" id="mainProductImg">
                </div>
                <div class="product-thumbnails">
                    <% [producto.nombre_imagen, producto.nombre_imagen2, producto.nombre_imagen3].forEach((img, i) => { %>
                      <% if (img) { %>
                        <div class="product-thumbnail <%= i === 0 ? 'active' : '' %>" data-img="/showImage/<%= img %>">
                          <img src="/showImage/<%= img %>" alt="<%= producto.nombre %>">
                        </div>
                      <% } %>
                    <% }); %>
                </div>
            </div>

            <div class="product-info">
                <h1 class="product-title"><%= producto.nombre %></h1>
                <div class="product-price">$<%= producto.precio %></div>
                <div class="product-description"><p><%= producto.descripcion %></p></div>

                <div class="product-meta">
                    <h4 class="meta-title">Plantel</h4>
                    <div class="meta-tags"><span class="meta-tag"><%= producto.plantel_nombre %></span></div>
                </div>

                <div class="product-meta">
                    <h4 class="meta-title">Catálogo</h4>
                    <div class="meta-tags"><span class="meta-tag"><%= producto.categoria_nombre %></span></div>
                </div>

