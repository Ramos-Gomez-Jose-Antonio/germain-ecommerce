    <script>
    document.addEventListener('DOMContentLoaded', function () {
        const userProfileToggle = document.getElementById('userProfileToggle');
        const profileModal      = document.getElementById('profileModal');
        const modalOverlay      = document.getElementById('modalOverlay');
        const logoutBtn         = document.getElementById('logoutBtn');
        const decreaseBtn       = document.getElementById('decreaseQuantity');
        const increaseBtn       = document.getElementById('increaseQuantity');
        const mainImg           = document.getElementById('mainProductImg');
        const addToCartBtn = document.getElementById('addToCartBtn');
        const qtyInput     = document.getElementById('quantityInput');
        const maxQty       = parseInt(qtyInput.getAttribute('max'), 10) || 1;
        const productId    = <%= producto.producto_id %>;

        // — Modal usuario —
        userProfileToggle.addEventListener('click', () => {
        profileModal.classList.toggle('active');
        modalOverlay.classList.toggle('active');
        });
        modalOverlay.addEventListener('click', () => {
        profileModal.classList.remove('active');
        modalOverlay.classList.remove('active');
        });
        logoutBtn.addEventListener('click', () => {
        window.location.href = '/salida';
        });

        cargarDatosUsuario();

        // — Thumbnails —
        document.querySelectorAll('.product-thumbnail').forEach(t => {
        t.addEventListener('click', () => {
            document.querySelectorAll('.product-thumbnail').forEach(x => x.classList.remove('active'));
            t.classList.add('active');
            mainImg.src = t.getAttribute('data-img');
        });
        });

        // — Selector de cantidad —
        decreaseBtn.addEventListener('click', () => {
        let v = parseInt(qtyInput.value) || 1;
        if (v > 1) qtyInput.value = v - 1;
        });
        increaseBtn.addEventListener('click', () => {
        let v = parseInt(qtyInput.value) || 1;
        if (v < maxQty) qtyInput.value = v + 1;
        });
        qtyInput.addEventListener('input', () => {
        let v = parseInt(qtyInput.value) || 1;
        if (v < 1) v = 1;
        if (v > maxQty) v = maxQty;
        qtyInput.value = v;
        });

        // — Agregar al carrito sin recargar —
        addToCartBtn.addEventListener('click', async (e) => {
        e.preventDefault();  // evita cualquier comportamiento por defecto

        let qty = parseInt(qtyInput.value, 10) || 1;
        if (qty < 1) qty = 1;
        if (qty > maxQty) qty = maxQty;

        try {
        const res = await fetch('/carrito-compra', {
            method: 'POST',
            credentials: 'include',               // enviar siempre la cookie de sesión
            headers: {
            'Content-Type': 'application/json',
            'Accept':       'application/json' // esperamos JSON de vuelta
            },
            body: JSON.stringify({
            producto_id: productId,
            cantidad:    qty
            })
        });

        const data = await res.json();
        if (data.success) {
            alert(`Se agregaron ${qty} <%= producto.nombre %> al carrito.`);
            // Si el carrito está abierto en otra pestaña/vista, lo refrescamos
            if (typeof window.fetchAndShowData === 'function') {
            window.fetchAndShowData();
            }
        } else {
            alert('Error del servidor: ' + (data.error || 'No se pudo agregar el producto.'));
        }
        } catch (err) {
        console.error('Error al agregar al carrito:', err);
        alert('Ocurrió un error al agregar el producto.');
        }
    });
});

    // — Carga datos de usuario —
    async function cargarDatosUsuario() {
        try {
        const response = await fetch('/api/usuario/detalle', { credentials: 'include' });
        if (!response.ok) return;
        const userData = await response.json();
        document.querySelector('.user-name').textContent  = `${userData.nombres} ${userData.apellidopat} ${userData.apellidomat}`;
        document.querySelector('.user-email').textContent = userData.correo;
        document.getElementById('userProfilePic').src    = `/showImage/${userData.imagen_perfil}`;
        } catch (e) {
        console.error('Error al cargar datos de usuario:', e);
        }
    }
    </script>
