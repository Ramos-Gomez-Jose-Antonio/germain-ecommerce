        :root {
            --primary-color: #FF9900;
            --secondary-color: #44006b;
            --accent-color: #FF7200;
            --light-color: #f8f9fa;
            --dark-color: #343a40;
            --text-color: #333;
            --light-orange-1: #FFF3E0;
            --light-orange-2: #FFEACC;
        }
        
        * {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f9f9f9;
            color: var(--text-color);
            line-height: 1.6;
            overflow-x: hidden;
        }
        
        /* HEADER & NAVBAR */
        .navbar {
            background-color: var(--primary-color) !important;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            padding: 15px 0;
            transition: all 0.3s ease;
        }
        
        .navbar-brand {
            font-weight: 700;
            font-size: 1.5rem;
            color: var(--text-color) !important;
            display: flex;
            align-items: center;
        }

        .navbar-logo {
            height: 40px;
            margin-right: 10px;
            transition: transform 0.3s ease;
        }
        
        .navbar-logo:hover {
            transform: scale(1.05);
        }

        .search-form {
            position: relative;
            width: 100%;
            max-width: 500px;
        }

        .search-input {
            width: 100%;
            padding: 10px 15px;
            border-radius: 50px;
            border: none;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            font-size: 0.9rem;
        }

        .search-btn {
            position: absolute;
            right: 5px;
            top: 5px;
            background: none;
            border: none;
            color: #999;
            cursor: pointer;
            padding: 5px 10px;
        }

        .nav-icons {
            display: flex;
            gap: 15px;
        }

        .nav-icon {
            font-size: 1.3rem;
            color: var(--text-color);
            transition: all 0.3s ease;
        }

        .nav-icon:hover {
            color: white;
            transform: scale(1.1);
        }

        /* BREADCRUMB */
        .breadcrumb-container {
            background-color: #f5f5f5;
            padding: 10px 0;
            margin-top: 80px;
        }

        .breadcrumb {
            margin-bottom: 0;
            padding: 0;
        }

        .breadcrumb-item a {
            color: var(--accent-color);
            text-decoration: none;
        }

        .breadcrumb-item.active {
            color: var(--text-color);
        }

        /* SIDEBAR */
        .sidebar {
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
            padding: 20px;
            margin-bottom: 20px;
        }

        .sidebar-title {
            font-size: 1.2rem;
            font-weight: 600;
            margin-bottom: 15px;
            padding-bottom: 10px;
            border-bottom: 2px solid var(--light-orange-1);
        }

        .category-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .category-item {
            padding: 8px 0;
            border-bottom: 1px solid #eee;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .category-link {
            color: var(--text-color);
            text-decoration: none;
            transition: all 0.3s ease;
            display: block;
            width: 100%;
        }

        .category-link:hover {
            color: var(--accent-color);
            transform: translateX(5px);
        }

        .category-icon {
            color: #ccc;
            transition: all 0.3s ease;
        }

        .category-item:hover .category-icon {
            color: var(--accent-color);
        }

        /* PRODUCTS SECTION */
        .products-container {
            padding: 40px 0;
        }

        .section-title {
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 20px;
            position: relative;
            padding-bottom: 10px;
        }

        .section-title::after {
            content: "";
            position: absolute;
            bottom: 0;
            left: 0;
            width: 60px;
            height: 3px;
            background-color: var(--accent-color);
        }

        .products-count {
            color: #888;
            font-size: 0.9rem;
            margin-bottom: 20px;
        }

        .product-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 30px;
        }

        .product-card {
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
            overflow: hidden;
            transition: all 0.3s ease;
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }

        .product-img-container {
            height: 180px;
            overflow: hidden;
            position: relative;
            background-color: #f9f9f9;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 15px;
        }

        .product-img {
            max-height: 100%;
            max-width: 100%;
            object-fit: contain;
            transition: all 0.5s ease;
        }

        .product-card:hover .product-img {
            transform: scale(1.05);
        }

        .product-body {
            padding: 20px;
            display: flex;
            flex-direction: column;
            flex-grow: 1;
        }

        .product-title {
            font-size: 1rem;
            font-weight: 600;
            margin-bottom: 10px;
            line-height: 1.4;
            height: 2.8em;
            overflow: hidden;
            text-overflow: ellipsis;
            display: -webkit-box;
            -webkit-box-orient: vertical;
        }

        .product-category {
            color: #999;
            font-size: 0.85rem;
            margin-bottom: 15px;
        }

        .product-price {
            font-weight: 700;
            font-size: 1.2rem;
            color: var(--accent-color);
            margin-top: auto;
        }

        /* PAGINATION */
        .pagination-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 40px;
        }

        .pagination {
            display: flex;
            gap: 5px;
            list-style: none;
            margin: 0;
            padding: 0;
        }

        .page-item {
            width: 35px;
            height: 35px;
        }

        .page-link {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            height: 100%;
            border-radius: 5px;
            background-color: white;
            color: var(--text-color);
            text-decoration: none;
            transition: all 0.3s ease;
            border: 1px solid #eee;
        }

        .page-link:hover {
            background-color: var(--light-orange-1);
            color: var(--accent-color);
        }

        .page-item.active .page-link {
            background-color: var(--accent-color);
            color: white;
            border-color: var(--accent-color);
        }

        .page-nav {
            color: var(--accent-color);
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 5px;
            transition: all 0.3s ease;
        }

        .page-nav:hover {
            transform: translateX(5px);
            color: var(--accent-color);
        }

        .page-nav.prev:hover {
            transform: translateX(-5px);
        }

        /* FOOTER */
        .footer {
            background-color: var(--primary-color);
            color: var(--text-color);
            padding: 3rem 0 2rem;
            margin-top: 80px;
        }
        
        .footer-logo {
            margin-bottom: 15px;
