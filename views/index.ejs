        }
        
        .footer-section p {
            margin-bottom: 15px;
        }
        
        .footer-title {
            font-weight: bold;
            margin-bottom: 20px;
            text-transform: uppercase;
            font-size: 16px;
            color: #333;
            position: relative;
            padding-bottom: 10px;
        }
        
        .footer-title::after {
            content: "";
            position: absolute;
            bottom: 0;
            left: 0;
            width: 40px;
            height: 3px;
            background-color: var(--accent-color);
        }
        
        .footer-links a {
            color: #333;
            text-decoration: none;
            display: block;
            margin-bottom: 10px;
            transition: all 0.3s ease;
            position: relative;
            padding-left: 15px;
        }
        
        .footer-links a::before {
            content: "→";
            position: absolute;
            left: 0;
            color: var(--accent-color);
            opacity: 0;
            transition: all 0.3s ease;
        }
        
        .footer-links a:hover {
            color: var(--accent-color);
            transform: translateX(5px);
            text-decoration: none;
        }
        
        .footer-links a:hover::before {
            opacity: 1;
        }
        
        .social-icons {
            display: flex;
            gap: 15px;
            margin-top: 20px;
        }
        
        .social-icon {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 40px;
            height: 40px;
            background-color: white;
            border-radius: 50%;
            color: var(--accent-color);
            font-size: 18px;
            transition: all 0.3s ease;
            text-decoration: none;
        }
        
        .social-icon:hover {
            background-color: var(--accent-color);
            color: white;
            transform: translateY(-5px);
        }
        
        .copyright {
            text-align: center;
            margin-top: 30px;
            padding-top: 20px;
            border-top: 1px solid rgba(0,0,0,0.1);
            font-weight: 500;
        }

        /* RESPONSIVE */
