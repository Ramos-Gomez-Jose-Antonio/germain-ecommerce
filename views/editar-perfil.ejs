<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Perfil - Prueba</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .profile-form {
            max-width: 800px;
            margin: 2rem auto;
            padding: 2rem;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
        .form-section {
            margin-bottom: 1.5rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid #dee2e6;
        }
    </style>
</head>
<body class="bg-light">
    <div class="container py-5">
        <div class="profile-form bg-white">
            <h2 class="text-center mb-4">Editar Perfil (Prueba)</h2>
            
            <% if (messages.error) { %>
                <div class="alert alert-danger"><%= messages.error %></div>
            <% } %>
            
            <% if (messages.success) { %>
                <div class="alert alert-success"><%= messages.success %></div>
            <% } %>

            <form action="/editar-perfil" method="POST">
                
                <!-- Sección Información Personal -->
                <div class="form-section">
                    <h4 class="mb-3">Información Personal</h4>
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label for="nombres" class="form-label">Nombres</label>
                            <input type="text" class="form-control" id="nombres" name="nombres" 
                                   value="<%= user.nombres %>" required>
                        </div>
                        <div class="col-md-4">
                            <label for="apellidopat" class="form-label">Apellido Paterno</label>
                            <input type="text" class="form-control" id="apellidopat" name="apellidopat" 
                                   value="<%= user.apellidopat %>" required>
                        </div>
                        <div class="col-md-4">
                            <label for="apellidomat" class="form-label">Apellido Materno</label>
                            <input type="text" class="form-control" id="apellidomat" name="apellidomat" 
                                   value="<%= user.apellidomat %>" required>
                        </div>
                    </div>
                </div>

                <!-- Sección Datos de Contacto -->
                <div class="form-section">
                    <h4 class="mb-3">Datos de Contacto</h4>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label for="correo" class="form-label">Correo Electrónico</label>
                            <input type="email" class="form-control" id="correo" name="correo" 
                                   value="<%= user.correo %>" required>
                        </div>
                        <div class="col-md-6">
                            <label for="telefono" class="form-label">Teléfono</label>
                            <input type="tel" class="form-control" id="telefono" name="telefono" 
                                   value="<%= user.telefono %>" required>
                        </div>
                    </div>
                </div>

                <!-- Sección Datos de Cuenta -->
                <div class="form-section">
                    <h4 class="mb-3">Datos de Cuenta</h4>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label for="usuario" class="form-label">Nombre de Usuario</label>
                            <input type="text" class="form-control" id="usuario" name="usuario" 
                                   value="<%= user.usuario %>" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Rol</label>
                            <input type="text" class="form-control" value="<%= user.rol %>" disabled>
                        </div>
                    </div>
                </div>

                <!-- Sección Plantel -->
                <div class="form-section">
                    <h4 class="mb-3">Datos Institucionales</h4>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label for="plantel_id" class="form-label">Plantel</label>
                            <select class="form-select" id="plantel_id" name="plantel_id" required>
                                <% planteles.forEach(plantel => { %>
                                    <option value="<%= plantel.plantel_id %>" 
                                        <%= user.plantel_id == plantel.plantel_id ? 'selected' : '' %>>
                                        <%= plantel.nombre %>
                                    </option>
                                <% }); %>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Botones -->
                <div class="d-flex justify-content-between mt-4">
                    <a href="/" class="btn btn-outline-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>