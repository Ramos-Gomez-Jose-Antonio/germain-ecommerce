    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Modal functionality
            const userProfileToggle = document.getElementById('userProfileToggle');
            const profileModal = document.getElementById('profileModal');
            const modalOverlay = document.getElementById('modalOverlay');
            const logoutBtn = document.getElementById('logoutBtn');
            
            userProfileToggle.addEventListener('click', function() {
                profileModal.classList.toggle('active');
                modalOverlay.classList.toggle('active');
            });
            
            modalOverlay.addEventListener('click', function() {
                profileModal.classList.remove('active');
                modalOverlay.classList.remove('active');
            });
            
            logoutBtn.addEventListener('click', function() {
                window.location.href = '/salida';
            });

            // Toggle password section
            const togglePassword = document.getElementById('togglePassword');
            const passwordSection = document.getElementById('passwordSection');
            
            togglePassword.addEventListener('click', function(e) {
                e.preventDefault();
                const isVisible = passwordSection.style.display === 'block';
                
                if (isVisible) {
                    // Ocultar sección de contraseña
                    passwordSection.style.display = 'none';
                    togglePassword.textContent = 'Cambiar contraseña';
                    
                    // Limpiar campos de contraseña cuando se ocultan
                    document.getElementById('newPassword').value = '';
                    document.getElementById('confirmPassword').value = '';
                } else {
                    // Mostrar sección de contraseña
                    passwordSection.style.display = 'block';
                    togglePassword.textContent = 'Ocultar';
                }
            });

            // Eliminar imagen functionality
            const eliminarImagenBtn = document.getElementById('eliminarImagenBtn');
            const eliminarImagenInput = document.getElementById('eliminarImagen');
            const imagePreview = document.getElementById('imagePreview');
            const fileInput = document.getElementById('imagen_perfil');
            
            eliminarImagenBtn.addEventListener('click', function() {
                if (confirm('¿Estás seguro de que quieres eliminar tu imagen de perfil actual?')) {
                    // Marcar para eliminación
                    eliminarImagenInput.value = 'true';
                    
                    // Cambiar vista previa a imagen por defecto
                    imagePreview.src = '/showImage/default-avatar.png';
                    
                    // Limpiar input de archivo
                    fileInput.value = '';
                    
                    // Cambiar texto del botón
                    eliminarImagenBtn.innerHTML = '<i class="fas fa-check file-input-icon"></i>Imagen marcada para eliminar';
                    eliminarImagenBtn.disabled = true;
                    eliminarImagenBtn.style.backgroundColor = '#28a745';
                    eliminarImagenBtn.style.borderColor = '#28a745';
                }
            });

            // Image preview
            fileInput.addEventListener('change', function() {
                const file = this.files[0];
                if (!file) return;
                
                // Resetear eliminación si se selecciona nueva imagen
                eliminarImagenInput.value = 'false';
                eliminarImagenBtn.innerHTML = '<i class="fas fa-trash file-input-icon"></i>Eliminar imagen actual';
                eliminarImagenBtn.disabled = false;
                eliminarImagenBtn.style.backgroundColor = '#dc3545';
                eliminarImagenBtn.style.borderColor = '#dc3545';
                
                // Validar tipo de archivo
                if (!file.type.match('image/jpeg') && !file.type.match('image/png')) {
                    alert('Solo se permiten imágenes JPEG o PNG');
                    this.value = '';
                    return;
                }
                
                // Validar tamaño
                if (file.size > 5 * 1024 * 1024) {
                    alert('La imagen es demasiado grande (máximo 5MB permitido)');
                    this.value = '';
                    return;
                }
                
                // Mostrar vista previa
                const reader = new FileReader();
                reader.onload = function(e) {
                    imagePreview.src = e.target.result;
                    // Actualizar también la imagen en el modal
                    const modalImg = document.getElementById('userProfilePic');
                    if (modalImg) modalImg.src = e.target.result;
                }
                reader.readAsDataURL(file);
            });

            // Form validation
            const form = document.querySelector('form');
            form.addEventListener('submit', function(e) {
                const telefono = document.getElementById('telefono');
                const newPassword = document.getElementById('newPassword');
                const confirmPassword = document.getElementById('confirmPassword');
                
                // Validar teléfono
                if (!/^\d{10}$/.test(telefono.value)) {
                    e.preventDefault();
                    alert('El número de teléfono debe tener exactamente 10 dígitos');
                    telefono.focus();
                    return;
                }
                
                // Validar contraseñas SOLO si la sección de contraseña está visible y se llenó algún campo
                const passwordSectionVisible = passwordSection.style.display === 'block';
                const hasPasswordValue = newPassword.value.trim() !== '' || confirmPassword.value.trim() !== '';
                
                if (passwordSectionVisible && hasPasswordValue) {
                    // Si la sección está visible y hay algún valor, validar ambos campos
                    if (!newPassword.value.trim() || !confirmPassword.value.trim()) {
                        e.preventDefault();
                        alert('Debes completar ambos campos de contraseña si deseas cambiarla');
                        return;
                    }
                    
                    if (newPassword.value !== confirmPassword.value) {
                        e.preventDefault();
                        alert('Las nuevas contraseñas no coinciden');
                        return;
                    }
                    
                    if (newPassword.value.length < 6) {
                        e.preventDefault();
                        alert('La nueva contraseña debe tener al menos 6 caracteres');
                        return;
                    }
                }
                
                // Si la sección no está visible, limpiar campos por seguridad
                if (!passwordSectionVisible) {
                    newPassword.value = '';
                    confirmPassword.value = '';
                }
                
                // Mostrar loader durante el envío
                const submitBtn = form.querySelector('button[type="submit"]');
                if (submitBtn) {
                    submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Guardando...';
                    submitBtn.disabled = true;
                }
            });
        });
    </script>
