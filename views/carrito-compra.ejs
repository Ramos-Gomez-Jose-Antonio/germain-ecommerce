<script>
  document.addEventListener('DOMContentLoaded', () => {
    configurarModalUsuario();
    document.getElementById('clear-cart-btn')
            .addEventListener('click', borrarCarrito);
    fetchAndShowData();
  });

  function configurarModalUsuario() {
    const userToggle   = document.getElementById('userProfileToggle');
    const profileModal = document.getElementById('profileModal');
    const overlay      = document.getElementById('modalOverlay');
    const logoutBtn    = document.getElementById('logoutBtn');

    userToggle.addEventListener('click', () => {
      profileModal.classList.toggle('active');
      overlay.classList.toggle('active');
    });
    overlay.addEventListener('click', () => {
      profileModal.classList.remove('active');
      overlay.classList.remove('active');
    });
    logoutBtn.addEventListener('click', () => {
      window.location.href = '/salida';
    });
  }

  async function cargarDatosUsuario() {
    try {
      const res = await fetch('/api/usuario/detalle', { credentials: 'include' });
      if (!res.ok) return;
      const u = await res.json();
      document.querySelector('.user-name').textContent  = 
        `${u.nombres} ${u.apellidopat} ${u.apellidomat}`;
      document.querySelector('.user-email').textContent = u.correo;
      if (u.imagen_perfil) {
        document.getElementById('userProfilePic')
                .src = `/showImage/${u.imagen_perfil}`;
      }
    } catch (e) {
      console.error('Error al cargar usuario:', e);
    }
  }

  // hacemos accesible desde detalle de producto
  window.fetchAndShowData = fetchAndShowData;

  async function fetchAndShowData() {
    try {
      // 1) refrescar modal
      cargarDatosUsuario();

      // 2) traemos la fila de elementos_carrito
      const res = await fetch('/productos-carrito-compra', {
        credentials: 'same-origin'
      });
      if (!res.ok) throw new Error(`HTTP ${res.status}`);
      const ec = await res.json();  // puede ser []

      // 3) referencias DOM
      const productList     = document.getElementById('product-list');
      const summaryItems    = document.getElementById('summary-items');
      const checkoutSection = document.getElementById('checkout-section');
      const cartTotal       = document.getElementById('cart-total');
      const clearBtn        = document.getElementById('clear-cart-btn');

      // 4) parseo seguro de JSON
      let productos = [];
      const raw = ec[0]?.productos_comprados;
      if (Array.isArray(raw)) {
        productos = raw;
      } else if (typeof raw === 'string') {
        try {
          const tmp = JSON.parse(raw);
          if (Array.isArray(tmp)) productos = tmp;
        } catch (err) {
          console.warn('JSON inválido en productos_comprados:', raw, err);
        }
      }
      // si raw es null/undefined, dejamos productos = []

      // 5) si carrito vacío
      if (productos.length === 0) {
        productList.innerHTML = `
          <div class="empty-cart-message">
            <i class="fas fa-shopping-cart fa-3x mb-3"></i>
            <h3 class="mb-2">Tu carrito está vacío</h3>
            <p class="mb-4">No hay productos en tu carrito de compras</p>
          </div>`;
        cartTotal.style.display    = 'none';
        clearBtn.style.display     = 'none';
        summaryItems.innerHTML     = '';
        checkoutSection.innerHTML  = `
          <div class="empty-cart-alert alert alert-warning">
            <p class="mb-3">Agrega productos a tu carrito para continuar con la compra</p>
            <a href="/" class="btn btn-outline-primary">
              <i class="fas fa-store mr-2"></i> Ver productos disponibles
            </a>
          </div>`;
        return;
      }

      // 6) hay productos: renderizamos
      productList.innerHTML   = '';
      summaryItems.innerHTML  = '';
      cartTotal.style.display = 'flex';
      clearBtn.style.display  = 'block';

      let subtotal = 0;
      productos.forEach(prod => {
        const itemTotal = prod.precio * prod.cantidad;
        subtotal += itemTotal;

        // tarjeta de producto
        const div = document.createElement('div');
        div.className = 'cart-item';
        div.innerHTML = `
          <div class="item-image">
            <img src="${prod.imagen || '/api/placeholder/80/80'}" alt="${prod.nombre}">
          </div>
          <div class="item-details">
            <h5 class="item-title">${prod.nombre}</h5>
            <p class="item-info"> CECyT ${prod.plantel_id} – ${prod.categoria_nombre || ''}</p>
            <div class="item-price">$${prod.precio}</div>
          </div>
          <div class="quantity-control">
            <button type="button" class="quantity-btn decrement-btn" data-id="${prod.producto_id}">
              <i class="fas fa-minus"></i>
            </button>
            <input type="text" class="quantity-input" value="${prod.cantidad}" readonly>
            <button type="button" class="quantity-btn increment-btn" data-id="${prod.producto_id}">
              <i class="fas fa-plus"></i>
            </button>
          </div>
          <button type="button" class="remove-item" data-id="${prod.producto_id}">
            <i class="fas fa-times"></i>
          </button>`;
        productList.appendChild(div);

        // resumen por línea
        const sumDiv = document.createElement('div');
        sumDiv.className = 'summary-item';
        sumDiv.innerHTML = `
          <span class="summary-label">${prod.nombre} (x${prod.cantidad})</span>
          <span class="summary-value">$${itemTotal}</span>`;
        summaryItems.appendChild(sumDiv);
      });

      // 7) IVA y Total
      const iva = subtotal * 0.16;
      summaryItems.insertAdjacentHTML('beforeend', `
        <div class="summary-item">
          <span class="summary-label">IVA</span>
          <span class="summary-value highlight">$${iva.toFixed(2)}</span>
        </div>`);
        const totalServer = ec[0]?.precio_total;
        const total = typeof totalServer === 'number'  ? totalServer: (subtotal + iva); 
        cartTotal.innerHTML = `<span>Total</span><span>$${total.toFixed(2)}</span>`;

      // 8) botón de pago
      checkoutSection.innerHTML = `
        <a href="/pagos" class="floating-btn warehouse-btn">
          <button id="checkout-btn" class="checkout-btn">
            Agregar método de pago <i class="fas fa-arrow-right"></i>
          </button>
        </a>`;

      // 9) eventos dinámicos
      document.querySelectorAll('.increment-btn').forEach(btn =>
        btn.addEventListener('click', e =>
          actualizarCantidad(e.currentTarget.dataset.id, 1)
        )
      );
      document.querySelectorAll('.decrement-btn').forEach(btn =>
        btn.addEventListener('click', e =>
          actualizarCantidad(e.currentTarget.dataset.id, -1)
        )
      );
      document.querySelectorAll('.remove-item').forEach(btn =>
        btn.addEventListener('click', e =>
          eliminarProducto(e.currentTarget.dataset.id)
        )
      );

    } catch (err) {
      console.error('Error al cargar el carrito:', err);
      document.getElementById('product-list').innerHTML = `
        <div class="alert alert-danger">
          <i class="fas fa-exclamation-triangle"></i>
          Error al cargar el carrito. Intenta de nuevo más tarde.
        </div>`;
    }
  }

  async function actualizarCantidad(id, change) {
        try {
            const res = await fetch(`/actualizar-cantidad/${id}`, {
            method: 'POST',
            credentials: 'same-origin',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ change })
            });
            const j = await res.json();
            if (j.success) fetchAndShowData();
            else alert(j.error || 'Error al actualizar cantidad');
        } catch (e) {
            console.error(e);
            alert('Error al actualizar la cantidad. Intenta de nuevo.');
        }
    }

  async function eliminarProducto(id) {
    try {
      const res = await fetch(`/carrito-compra/${id}`, {
        method: 'DELETE',
        credentials: 'same-origin'
      });
      if (res.ok) fetchAndShowData();
      else alert('Error al eliminar el producto');
    } catch (e) {
      console.error(e);
      alert('Error al eliminar el producto. Intenta de nuevo.');
    }
  }

  async function borrarCarrito() {
    if (!confirm('¿Vaciar carrito?')) return;
    try {
      const res = await fetch('/vaciar-carrito', {
        method: 'DELETE',
        credentials: 'same-origin'
      });
      const j = await res.json();
      if (j.success) fetchAndShowData();
      else alert('No se pudo vaciar el carrito');
    } catch (e) {
      console.error(e);
      alert('Error al vaciar el carrito. Intenta de nuevo.');
    }
  }
</script>
