    <a href="/almacen" class="floating-btn warehouse-btn">
        <i class="fas fa-warehouse"></i> Almacén
    </a>
    
    <a href="/salida" class="floating-btn exit-btn">
        <i class="fas fa-sign-out-alt"></i> Salida
    </a>

    <script>
        // Datos para la gráfica (estos vendrían de tu backend en una app real)
        document.addEventListener('DOMContentLoaded', function() {
            fetch('/data')
                .then(response => response.json())
                .then(data => {
                    const categorias = data.map(item => item.nombre);
                    const conteos = data.map(item => item.count);

                    const ctx = document.getElementById('productsChart').getContext('2d');
                    new Chart(ctx, {
                        type: 'bar',
                        data: {
                            labels: categorias,
                            datasets: [{
                                label: 'Productos por categoría',
                                data: conteos,
                                backgroundColor: [
                                    'rgba(46, 220, 210, 0.7)',
                                    'rgba(64, 194, 207, 0.7)',
                                    'rgba(85, 154, 211, 0.7)',
                                    'rgba(98, 122, 222, 0.7)',
                                    'rgba(255, 159, 64, 0.7)',
                                    'rgba(153, 102, 255, 0.7)'
                                ],
                                borderColor: [
                                    'rgba(46, 220, 210, 1)',
                                    'rgba(64, 194, 207, 1)',
                                    'rgba(85, 154, 211, 1)',
                                    'rgba(98, 122, 222, 1)',
                                    'rgba(255, 159, 64, 1)',
                                    'rgba(153, 102, 255, 1)'
                                ],
                                borderWidth: 1
                            }]
                        },
                        options: {
                            responsive: true,
                            scales: {
                                y: {
                                    beginAtZero: true
                                }
                            },
                            plugins: {
                                legend: {
                                    display: false
                                }
                            }
                        }
                    });
                })
                .catch(error => {
                    console.error('Error al cargar los datos:', error);
                });
        });
    </script>
</body>
</html>