    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        :root {
            --primary-color: #FF9900;
            --secondary-color: #44006b;
            --accent-color: #FF7200;
            --light-color: #f8f9fa;
            --dark-color: #343a40;
            --text-color: #333;
            --light-orange-1: #FFF3E0;
            --light-orange-2: #FFEACC;
        }
        
        * {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f9f9f9;
            color: var(--text-color);
            line-height: 1.6;
            overflow-x: hidden;
        }
        
        /* HEADER & NAVBAR */
        .navbar {
            background-color: var(--primary-color) !important;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            padding: 15px 0;
            transition: all 0.3s ease;
        }
        
        .navbar-brand {
            font-weight: 700;
            font-size: 1.5rem;
            color: var(--text-color) !important;
            display: flex;
            align-items: center;
        }

        .navbar-logo {
            height: 40px;
            margin-right: 10px;
            transition: transform 0.3s ease;
        }
        
        .navbar-logo:hover {
            transform: scale(1.05);
        }

        .search-form {
            position: relative;
            width: 100%;
            max-width: 500px;
        }

        .search-input {
            width: 100%;
            padding: 10px 15px;
            border-radius: 50px;
            border: none;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            font-size: 0.9rem;
        }

        .search-btn {
            position: absolute;
            right: 5px;
            top: 5px;
            background: none;
            border: none;
            color: #999;
            cursor: pointer;
            padding: 5px 10px;
        }

        .nav-icons {
            display: flex;
            gap: 15px;
        }

        .nav-icon {
            font-size: 1.3rem;
            color: var(--text-color);
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .nav-icon:hover {
            color: white;
            transform: scale(1.1);
        }
        
        /* USER PROFILE MODAL */
        .profile-modal {
            position: fixed;
            top: 80px;
            right: 20px;
            width: 320px;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.15);
            z-index: 1000;
            overflow: hidden;
            opacity: 0;
            visibility: hidden;
            transform: translateY(-10px);
            transition: all 0.3s ease;
        }
        
        .profile-modal.active {
            opacity: 1;
            visibility: visible;
            transform: translateY(0);
        }
        
        .profile-modal-header {
            background-color: var(--primary-color);
            color: var(--text-color);
            padding: 15px;
            text-align: center;
            font-weight: bold;
            font-size: 1.2rem;
        }
        
        .profile-modal-body {
            padding: 20px;
        }
        
        .profile-picture {
            width: 120px;
            height: 120px;
            background-color: var(--light-orange-1);
            border-radius: 50%;
            margin: 0 auto 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            box-shadow: 0 3px 10px rgba(0,0,0,0.1);
        }
        
        .profile-picture img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        
        .user-name {
            text-align: center;
            font-weight: 600;
            font-size: 1.2rem;
            margin-bottom: 5px;
        }
        
        .user-email {
            text-align: center;
            color: #888;
            font-size: 0.9rem;
            margin-bottom: 20px;
        }
        
        .profile-menu {
            list-style: none;
            padding: 0;
            margin: 0;
            border-top: 1px solid #eee;
        }
        
        .profile-menu-item {
            border-bottom: 1px solid #eee;
        }
        
        .profile-menu-link {
            padding: 12px 0;
            display: flex;
            align-items: center;
            color: var(--text-color);
            text-decoration: none;
            transition: all 0.3s ease;
        }
        
        .profile-menu-link:hover {
            color: var(--accent-color);
            transform: translateX(5px);
        }
        
        .profile-menu-icon {
            width: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--accent-color);
        }
        
        .logout-btn {
            display: block;
            width: 100%;
            padding: 12px;
            background-color: var(--accent-color);
            color: white;
            text-align: center;
            border: none;
            border-radius: 5px;
            margin-top: 20px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .logout-btn:hover {
            background-color: #e56600;
            transform: translateY(-2px);
        }
        
        /* Overlay for closing modal when clicking outside */
        .modal-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: transparent;
            z-index: 999;
            display: none;
        }
        
        .modal-overlay.active {
            display: block;
        }

        /* MAIN CONTENT */
        main {
            margin-top: 10vh;
            padding: 10px 5% 40px;
        }

        .delivery-container {
            max-width: 1200px;
            margin: 0 auto;
            background-color: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.08);
            padding: 40px;
            overflow: hidden;
            position: relative;
        }

        .delivery-container::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 8px;
            background: linear-gradient(90deg, var(--primary-color), var(--accent-color));
        }

        .delivery-title {
            text-align: center;
            font-size: 2.5em;
            margin-bottom: 20px;
            color: var(--accent-color);
            font-weight: 700;
            position: relative;
            padding-bottom: 15px;
        }

        .delivery-title::after {
            content: "";
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 4px;
            background-color: var(--primary-color);
            border-radius: 2px;
        }

        .delivery-section {
            background-color: var(--light-orange-1);
            border-radius: 12px;
            padding: 30px;
            margin-bottom: 30px;
            display: flex;
            flex-wrap: wrap;
            align-items: center;
            gap: 30px;
        }

        .delivery-content {
            flex: 1;
            min-width: 300px;
        }

        .delivery-image {
            flex: 0 0 auto;
            max-width: 300px;
            border-radius: 8px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            transition: transform 0.3s ease;
        }

        .delivery-image:hover {
            transform: scale(1.05);
        }

        .delivery-section p {
            margin-bottom: 15px;
            font-size: 1.1em;
        }

        .bold-text {
            font-weight: 700;
        }

        /* BREADCRUMB */
        .breadcrumb-container {
            background-color: #f5f5f5;
            padding: 10px 0;
            margin-top: 80px;
        }

        .breadcrumb {
            margin-bottom: 0;
            padding: 0;
        }

        .breadcrumb-item a {
            color: var(--accent-color);
            text-decoration: none;
        }

        .breadcrumb-item.active {
            color: var(--text-color);
        }

        /* FOOTER */
        .footer {
            background-color: var(--primary-color);
            color: var(--text-color);
            padding: 3rem 0 2rem;
            margin-top: 80px;
        }
        
        .footer-logo {
            margin-bottom: 15px;
            max-width: 160px;
        }
        
        .footer-section p {
            margin-bottom: 15px;
        }
        
        .footer-title {
            font-weight: bold;
            margin-bottom: 20px;
            text-transform: uppercase;
            font-size: 16px;
            color: #333;
            position: relative;
            padding-bottom: 10px;
        }
        
        .footer-title::after {
            content: "";
            position: absolute;
            bottom: 0;
            left: 0;
            width: 40px;
            height: 3px;
            background-color: var(--accent-color);
        }
        
        .footer-links a {
            color: #333;
            text-decoration: none;
            display: block;
            margin-bottom: 10px;
            transition: all 0.3s ease;
            position: relative;
            padding-left: 15px;
        }
        
        .footer-links a::before {
            content: "→";
            position: absolute;
            left: 0;
            color: var(--accent-color);
            opacity: 0;
            transition: all 0.3s ease;
        }
        
        .footer-links a:hover {
            color: var(--accent-color);
            transform: translateX(5px);
            text-decoration: none;
        }
        
        .footer-links a:hover::before {
            opacity: 1;
        }
        
        .social-icons {
            display: flex;
            gap: 15px;
            margin-top: 20px;
        }
        
        .social-icon {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 40px;
            height: 40px;
            background-color: white;
            border-radius: 50%;
            color: var(--accent-color);
            font-size: 18px;
            transition: all 0.3s ease;
            text-decoration: none;
        }
        
        .social-icon:hover {
            background-color: var(--accent-color);
            color: white;
            transform: translateY(-5px);
        }
        
        .copyright {
            text-align: center;
            margin-top: 30px;
            padding-top: 20px;
            border-top: 1px solid rgba(0,0,0,0.1);
            font-weight: 500;
        }

        /* FLOATING BUTTONS */
        .floating-btn {
            position: fixed;
            bottom: 25px;
            z-index: 99;
            border-radius: 50px;
            padding: 12px 25px;
            color: white;
            font-size: 16px;
            border: none;
            box-shadow: 0 4px 15px rgba(0,0,0,0.2);
            transition: all 0.3s ease;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .warehouse-btn {
            left: 20px;
            background-color: var(--accent-color);
        }

        .warehouse-btn:hover {
            background-color: #E56700;
            transform: translateY(-5px);
            color: white;
        }

        .exit-btn {
            right: 20px;
            background-color: #dc3545;
        }

        .exit-btn:hover {
            background-color: #c82333;
            transform: translateY(-5px);
            color: white;
        }

        /* RESPONSIVE */
        @media (max-width: 992px) {
            .footer-section {
                margin-bottom: 30px;
            }
        }

        @media (max-width: 768px) {
            main {
                padding: 40px 4%;
            }
            
            .delivery-container {
                padding: 30px 20px;
            }
            
            .delivery-title {
                font-size: 2.2em;
            }
            
            .delivery-section {
                padding: 25px 15px;
            }
            
            .delivery-image {
                margin: 0 auto;
                max-width: 100%;
            }
        }

        @media (max-width: 576px) {
            .floating-btn {
                padding: 10px 15px;
                font-size: 14px;
            }
        }
    </style>
</head>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Buscar todos los enlaces que contengan "Cambiar a proveedor"
