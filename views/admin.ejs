        addPlantelModal.show();
    });
    plantelGrid.appendChild(addCard);
}

    function extraerNumeroPlantel(nombre) {
        // Ahora también acepta CET #
        const match = nombre.match(/(?:CECyT|CET)[\s\-_]*(?:No\.?)?[\s\-_]*(\d+)/i);
        return match ? parseInt(match[1]) : null;
    }
