// En la función renderPlanteles
function renderPlanteles(planteles) {
    plantelGrid.innerHTML = '';
    
    planteles.sort((a, b) => {
        const numA = extraerNumeroPlantel(a.nombre);
        const numB = extraerNumeroPlantel(b.nombre);
        return numA - numB;
    });

    planteles.forEach(plantel => {
        const card = document.createElement('div');
        card.className = 'plantel-card';
        
        // Generar nombre de imagen basado en el nombre del plantel
        const numeroPlantel = extraerNumeroPlantel(plantel.nombre);
        const prefijo = plantel.nombre.toLowerCase().includes('cet') ? 'cet' : 'c';
        const imageName = numeroPlantel ? `${prefijo}${numeroPlantel}.png` : 'default-plantel.png';

        const imageUrl = `/images/planteles/${imageName}`;

        card.innerHTML = `
            <img src="${imageUrl}" 
                 onerror="this.onerror=null;this.src='/images/default-plantel.png'"
                 alt="${plantel.nombre}" 
                 class="plantel-img">
            <h5 class="plantel-name">${plantel.nombre}</h5>
        `;
        
        card.addEventListener('click', () => {
            window.location.href = `/plantel/${plantel.plantel_id}`;
        });

        plantelGrid.appendChild(card);
    });

    // Añadir botón para nuevo plantel
