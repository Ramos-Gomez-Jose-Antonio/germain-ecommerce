        .search-btn {
            position: absolute;
            right: 5px;
            top: 5px;
            background: none;
            border: none;
            color: #999;
            cursor: pointer;
            padding: 5px 10px;
        }

        .nav-icons {
            display: flex;
            gap: 15px;
        }

        .nav-icon {
            font-size: 1.3rem;
            color: var(--text-color);
            transition: all 0.3s ease;
            cursor: pointer;
        }

